<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activity.AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008877"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24px"
            app:title="关于我们" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="本站资源均来自于互联网, 如有侵权, 请联系我们删除 !"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <com.allen.library.SuperTextView
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            app:sLeftTextSize="16sp"
            app:sLeftTextString="检查更新"
            app:sRightIconRes="@drawable/ic_baseline_keyboard_arrow_right_24px" />
        <com.allen.library.SuperTextView
            android:id="@+id/help_center"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            app:sLeftTextSize="16sp"
            app:sLeftTextString="帮助中心"
            app:sRightIconRes="@drawable/ic_baseline_keyboard_arrow_right_24px" />

        <com.allen.library.SuperTextView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            app:sLeftTextSize="16sp"
            app:sLeftTextString="意见反馈"
            app:sRightIconRes="@drawable/ic_baseline_keyboard_arrow_right_24px" />
        <com.allen.library.SuperTextView
            android:id="@+id/complaint"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            app:sLeftTextSize="16sp"
            app:sLeftTextString="版权投诉"
            app:sRightIconRes="@drawable/ic_baseline_keyboard_arrow_right_24px" />
        <com.allen.library.SuperTextView
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            app:sLeftTextSize="16sp"
            app:sLeftTextString="加入群组"
            app:sRightIconRes="@drawable/ic_baseline_keyboard_arrow_right_24px" />

